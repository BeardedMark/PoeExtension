{
    "manifest_version": 3,
    "name": "PoeExtension",
    "version": "1.0",
    "description": "Браузерное расширение для сайтов Path of Exile",
    "icons": {
        "16": "img/favicons/16.png",
        "32": "img/favicons/32.png",
        "48": "img/favicons/48.png",
        "64": "img/favicons/64.png",
        "128": "img/favicons/128.png"
    },
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*.pathofexile.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.pathofexile.com/trade*"
            ],
            "js": [
                "js/funcs.js",
                "js/scripts.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "css/ui.css",
                "css/styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "img/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}